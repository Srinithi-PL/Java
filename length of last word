public class Lastwordlength {
    public static void main(String[] args) {
        String s = "  give   me   the book   ";
        s = s.stripTrailing();
        int length = 0;
        for (int i = s.length() - 1; i >= 0; i--) {
            if (s.charAt(i) == ' ') {
                break; 
            }
            length++;
        }
        System.out.println("Length of the last word: " + length);
    }
}
